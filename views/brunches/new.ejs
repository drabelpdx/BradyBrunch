<% include ../partials/header %>

<div class="container">
    <div class="row jumbotron">
        <h2>Create a New Brunch Spot</h2>
        <div class="forms">
            <form action="/brunches" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="url" placeholder="website">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mapurl" placeholder="map url">
                </div>

                <div class="form-group">
                  <textarea class="form-control" name="about" rows="4" cols="50"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cost" placeholder="cost">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="wait" placeholder="wait">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="coffee" placeholder="coffee">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/brunches">Go Back</a>
        </div>
    </div>
</div>
<br>
<% include ../partials/footer %>
